pipeline {
    agent any

    tools {
        jdk 'Java17'          // Must match the JDK name configured in Jenkins (Manage Jenkins > Global Tool Config)
        maven 'Maven'       // Must match the Maven installation name in Jenkins
    }

    environment {
        APP_NAME = "demo-springboot"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning GitHub repository..."
                git branch: 'main',
                    url: 'https://github.com/Maheshh123/Maven.git'  // <-- replace with your actual repo URL
            }
        }

        stage('Build') {
            steps {
                echo "Building the project..."
                sh "mvn clean compile"
            }
        }

        stage('Test') {
            steps {
                echo "Running unit tests..."
                sh "mvn test"
            }
        }

        stage('Package') {
            steps {
                echo "Packaging the Spring Boot application..."
                sh "mvn package"
            }
        }

        stage('Archive') {
            steps {
                echo "Archiving the build artifact..."
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo "✅ Build completed successfully!"
        }
        failure {
            echo "❌ Build failed. Please check the logs."
        }
    }
}
